@{
    ViewData["Title"] = "Home Page";
}
@model Bank.Models.RegisterViewModel;

<div class="container body-content">
    <div class="row">
        <div class="col-md-6">
            <form asp-controller="Home" asp-action="Register" method="POST" class="form-group">
                <h1>Register</h1>
                <label asp-for="FirstName">FirstName: </label>
                <input asp-for="FirstName" class="form-control">
                <span class="error" asp-validation-for="FirstName"></span>
                <label asp-for="LastName">LastName: </label>
                <input asp-for="LastName" class="form-control">
                <span class="error" asp-validation-for="LastName"></span>
                <label asp-for="Email">Email: </label>
                <input asp-for="Email" class="form-control">
                <span class="error" asp-validation-for="Email"></span>
                <label asp-for="Password">Password: </label>
                <input asp-for="Password" class="form-control">
                <span class="error" asp-validation-for="Password"></span>
                <label asp-for="ConfirmedPW">Confirm Password</label>
                <input asp-for="ConfirmedPW" class="form-control">
                <span class="error" asp-validation-for="ConfirmedPW"></span>
                <br>
                <button type="submit" class="btn btn-info">Create new User</button>
            </form>
        </div>
        <div class="col-md-6">
            <h3 class="registered"><a href="Login">Already Registered?</a></h3>
        </div>
        <div class="col-md-6">
            <h3>Use Voucher</h3>
            <div class="col-md-6">
                <form action="voucheruse" method="post">
                    <input type="text" name="voucher_use" class="form-control" placeholder="Enter Voucher" />
                    <span class="error">@TempData["Error"]</span>
                    <br />
                    <input type="hidden" name="user" value="@ViewBag.UserId">
                    <button type="submit" class="btn btn-primary">Use Voucher</button>
                </form>
            </div>
        </div>
        <div>
            @{
                <span class="error">@ViewBag.errors </span>
            }
        </div>
    </div>
</div>